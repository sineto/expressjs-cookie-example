<form action="/calc" method="post">
  <input type="text" name="num1" />
  <select name="op">
    <option value="+">+</option>
    <option value="-">-</option>
    <option value="*">*</option>
    <option value="/">/</option>
  </select>
  <input type="text" name="num2" />
  <input type="submit" value="calcular" />
</form>

<% if (contas) { %>
  <h2>Contas</h2>
  <% contas.forEach((conta) => { %>
  <ul>
    <li><%= conta.num1 %> <%= conta.op %> <%= conta.num2 %> = <%= conta.total %></li>
  </ul>
  <% }) %>
<% } %>
